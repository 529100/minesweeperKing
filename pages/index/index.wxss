page {
    width: 750rpx;
    height: 100%;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 主菜单样式 */
.main-menu {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  
  .title {
    font-size: 48rpx;
    color: #2c3e50;
    margin-bottom: 60rpx;
    font-weight: bold;
  }
  
  .mode-btn {
    width: 400rpx;
    height: 100rpx;
    margin: 30rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
    background: #3498db;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
  }
  
  .mode-btn:active {
    background: #2980b9;
    transform: scale(0.95);
  }

  /* 返回按钮样式 */
.back-button {
    position: fixed;
    left: 30rpx;
    top: 30rpx;
    z-index: 1000;
    padding: 8rpx 25rpx;
    font-size: 28rpx;
    color: #2c3e50;
    background: rgba(255,255,255,0.9);
    border: 1rpx solid #ddd;
    border-radius: 40rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
    transition: all 0.2s;
  }
  
  .back-button:active {
    background: #f0f0f0;
    transform: scale(0.95);
  }

.wrapper {
    padding: 5px;
}

.flex-container {
    padding: 0;
    margin: 0 auto;
    list-style: none;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    line-height:1em;
    width: 90%;
}

.flex-item {
    background: #E6E9ED;
    margin: 1px;
    /*color: rgb(36, 138, 221);*/
    font-weight: bold;
    font-size: 14px;
    text-align: center;
    flex: 1 0 auto;
    height: 90rpx;
    width: 90rpx;
    font-family: "Lucida Console", Monaco, monospace;
    position: relative;  /* 为图片定位做准备 */
    padding: 0;          /* 清除默认按钮内边距 */
    overflow: visible;   /* 确保图片不被裁剪 */
}

.open {
    background: #cccdcf;/*#3BAFDA;*/
}
/* 数字容器 */
.num-container {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
/* 数字基础样式 */
/* 放大数字 */
.num {
    font-size: 40rpx;        /* 原14px改为24px */
    font-weight: bold;
    text-align: center;
    line-height: 1.2;       /* 优化行高 */
}

/* 数字颜色梯度 */
.num-0 { color: hsl(200, 100%, 90%); }
.num-1 { color: hsl(200, 100%, 80%); }  /* 浅蓝 */
.num-2 { color: hsl(200, 100%, 70%); }
.num-3 { color: hsl(200, 100%, 60%); }
.num-4 { color: hsl(200, 100%, 50%); }
.num-5 { color: hsl(200, 100%, 40%); }
.num-6 { color: hsl(200, 100%, 30%); }
.num-7 { color: hsl(200, 100%, 20%); }
.num-8 { color: hsl(200, 100%, 10%); }  /* 深蓝 */

.mine-icon {
    position: absolute;  /* 绝对定位覆盖整个按钮 */
    top: 0;
    left: 0;
    width: 100%;         /* 完全填充按钮 */
    height: 100%;
    object-fit: contain; /* 保持图片比例完整显示 */
    border-radius: 10rpx;
}
.mine {
    background: #E9573F;
}
.flag-icon {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 10rpx;
}
/* 新增爆炸地雷样式 */
.bomb-icon {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 10rpx;
}

/* 爆炸地雷背景色（可选） */
.exploded-mine {
    background: #FF4444 !important;
}
/* 隐藏原旗帜文字 */

.flag {
    font-size: 0;
    background: #F6BB42;
}

.flex-item:before {
    content: '';
    display: block;
    float: left;
    padding-top:100%;
}

.header {
    display: flex;
    font-size: 14px;
    line-height: 2.5em;
    text-align: center;
}

.header .label {
    flex: 1;
}

.footer {
    padding-top: 50rpx;
    display: flex;   
    justify-content: space-around;
    align-items: center;
}

.button-hover {
    background-color: LightGrey;
}

.tips {
    margin-top: 20px;
    padding: 0 0 0 20px;
    font-size: 62.5%;
    color: #8d8d8d;
}

/* 模式选择器样式 */
.mode-selector {
    display: flex;
    justify-content: center;
    margin: 20rpx 0;
}

.mode-btn {
    margin: 0 10rpx;
    padding: 12rpx 24rpx;
    font-size: 28rpx;
    background: #f0f0f0;
    border-radius: 8rpx;
}

.mode-btn.active {
    background: #3BAFDA;
    color: white;
}

/* 时间输入框样式 */
.time-input {
    padding: 15rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.time-input input {
    border: 1rpx solid #ddd;
    padding: 10rpx;
    border-radius: 8rpx;
    width: 300rpx;  /* 适当加宽 */
    margin-top: 10rpx;
    text-align: center;  /* 输入文字居中 */
}

/* 排名容器 */
.ranking-container {
    padding: 40rpx;
    min-height: 100vh;
    background: #f5f5f5;
}

/* 选项卡样式 */
.rank-tabs {
    display: flex;
    margin: 40rpx 0;
    border-radius: 12rpx;
    overflow: hidden;
}

.tab-btn {
    flex: 1;
    height: 80rpx;
    background: #eee;
    font-size: 28rpx;
    border-radius: 0;
}

.tab-btn.active {
    background: #3BAFDA;
    color: white;
}

/* 排名列表 */
.rank-list {
    background: white;
    border-radius: 12rpx;
    padding: 0 30rpx;
}

.rank-item {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #eee;
}

.rank-item:last-child {
    border-bottom: none;
}

.rank {
    width: 120rpx;
    color: #666;
}

/* 添加已上传标识样式 */
.time {
    color: #3BAFDA;
    font-weight: bold;
}
.time::after {
    content: '✓';
    color: #4CAF50;
    margin-left: 10rpx;
    opacity: 0;
}
.time[data-uploaded="true"]::after {
    opacity: 1;
}

.date {
    width: 240rpx;
    text-align: right;
    color: #999;
    font-size: 24rpx;
}

.avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.name {
    flex: 1;
    color: #333;
}

.no-data {
    text-align: center;
    color: #999;
    padding: 40rpx;
}

/* 上传按钮样式 */
.upload-section {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.upload-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #3BAFDA;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.upload-btn:active {
  background: #2d8ebd;
}